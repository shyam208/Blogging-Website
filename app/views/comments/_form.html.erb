
<%# <% first level comment Form %> 

<%= form_with model: [@user, @article, @article.comments.build ] do |form| %>
 <%= form.hidden_field :parent_id %>
 <%= form.hidden_field :article_id %>
 <p>
   <%= form.label :commenter %><br>
   <%= form.text_field :commenter %>
   <% @article.errors.full_messages_for(:commenter).each do |message| %>
      <div><%= message %></div>
    <% end %>
 </p>
 <p>
   <%= form.label :body %><br>
   <%= form.text_area :body %>
   <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
 </p>
 <p>
   <%= form.submit %>
 </p>
<% end %>