
<%# edit existing article %>

<h2> Edit Article </h2>

<%= form_with model: [ @user, @article ] do |form| %>
<div>
  <%= form.label :title %><br>
  <%= form.text_field :title %>
  <% @user.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.label :imagePath %><br>
  <%= form.text_area :imagePath %>
  <% @user.errors.full_messages_for(:imagePath).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>

<div>
  <%= form.label :body %><br>
  <%= form.text_field :body %>
  <% @user.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
</div>
<div>
 <%= form.submit "Submit!!" %>
</div>
<%end%>